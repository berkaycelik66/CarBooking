@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Bilgileri girerek referansı güncelleyebilirsiniz.
                        </p>

                        <!-- end card-body-->
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="Name">İsim</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Ünvan</label>
                                <input type="text" class="form-control" id="Title" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Yorum</label>
                                <textarea rows="5" class="form-control" id="Comment" asp-for="Comment"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görsel URL</label>
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
                            </div>
                            <a href="/Admin/AdminTestimonial/Index/" class="btn btn-danger">Geri Dön</a>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referansı Güncelle</button>
                        </form>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end page title -->

        </div> <!-- container-fluid -->
    </div>
</div>

