@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6 col-xl-3">
                <div class="card bg-primary border-primary shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Araç Sayısı</h5>
                        <h2 class="text-white">@ViewBag.CarCount</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-success border-success shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Lokasyon Sayısı</h5>
                        <h2 class="text-white">@ViewBag.LocationCount</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-warning border-warning shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Blog Yazar Sayısı</h5>
                        <h2 class="text-white">@ViewBag.AuthorCount</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-info border-info shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Blog Sayısı</h5>
                        <h2 class="text-white">@ViewBag.BlogCount</h2>
                    </div>
                </div>
            </div> <!-- end col-->
        </div>

        <div class="row">
            <div class="col-md-6 col-xl-3">
                <div class="card bg-danger border-danger shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Araç Marka Sayısı</h5>
                        <h2 class="text-white">@ViewBag.BrandCount</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-dark border-dark shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Otomatik Araç Sayısı</h5>
                        <h2 class="text-white">@ViewBag.CarCountByTransmissionIsAuto</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-primary border-primary shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Elektrikli Araç Sayısı</h5>
                        <h2 class="text-white">@ViewBag.CarCountByFuelElectric</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-success border-success shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">En Çok Araç Olan Marka</h5>
                        <h2 class="text-white">@ViewBag.BrandNameByMaxCar</h2>
                    </div>
                </div>
            </div> <!-- end col-->
        </div>

        <div class="row">
            <div class="col-md-6 col-xl-3">
                <div class="card bg-warning border-warning shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Günlük Ortalama Kiralama Ücreti</h5>
                        <h2 class="text-white">@ViewBag.AverageRentPriceForDaily</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-info border-info shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Haftalık Ortalama Kiralama Ücreti</h5>
                        <h2 class="text-white">@ViewBag.AverageRentPriceForWeekly</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-danger border-danger shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">Aylık Ortalama Kiralama Ücreti</h5>
                        <h2 class="text-white">@ViewBag.AverageRentPriceForMonthly</h2>
                    </div>
                </div>
            </div> <!-- end col-->

            <div class="col-md-6 col-xl-3">
                <div class="card bg-dark border-dark shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-3">En Çok Yorum Alan Blog</h5>
                        <h2 class="text-white">@ViewBag.BlogTitleByMaxBlogComment</h2>
                    </div>
                </div>
            </div> <!-- end col-->
        </div>
    </div> <!-- container-fluid -->
</div>

