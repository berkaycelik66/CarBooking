@model List<ResultCarFeatureByCarIdDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card shadow rounded-4">
                    <div class="card-body p-5">
                        <h4 class="card-title mb-3">Araca Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4 text-muted">
                            Araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir, ilgili güncellemeleri gerçekleştirebilirsiniz.
                        </p>

                        <form method="post">
                            <div class="row g-3">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="col-sm-6 col-md-4 col-lg-3 py-1">
                                        <div class="border rounded p-3 h-100 feature-box">
                                            <div class="form-check">
                                                <input type="hidden" asp-for="@Model[i].CarFeatureID" />
                                                <input type="hidden" asp-for="@Model[i].FeatureName" />
                                                <input type="checkbox" asp-for="@Model[i].IsPresent" class="form-check-input" id="feature-@i" />
                                                <label class="form-check-label ms-2" for="feature-@i">
                                                    @Model[i].FeatureName
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="text-end mt-4">
                                <button class="btn btn-primary px-4">Değişiklikleri Kaydet</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
