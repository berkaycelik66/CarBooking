@model UpdateFooterAddressDto

@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Alt Adres Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Bilgileri girerek alt adresi güncelleyebilirsiniz.
                        </p>

                        <!-- end card-body-->
                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressID" />
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="Address">Adres</label>
                                <input type="text" class="form-control" id="Address" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="text" class="form-control" id="Phone" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="email" class="form-control" id="Mail" asp-for="Mail">
                            </div>
                            <a href="/Admin/AdminFooterAddress/Index/" class="btn btn-danger">Geri Dön</a>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Alt Adresi Güncelle</button>
                        </form>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end page title -->

        </div> <!-- container-fluid -->
    </div>
</div>
