@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Bilgileri değiştirerek aracı güncelleyebilirsiniz.
                        </p>

                        <!-- end card-body-->
                        <form method="post">
                            <input type="hidden" asp-for="CarID"/>
                            <div class="form-group">
                                <label for="Brand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="Model">Model</label>
                                <input type="text" class="form-control" id="Model" asp-for="Model">
                            </div>
                            <div class="form-group">
                                <label for="CoverImageUrl">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="CoverImageUrl" asp-for="CoverImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Mileage">Kilometre</label>
                                <input type="text" class="form-control" id="Mileage" asp-for="Mileage">
                            </div>
                            <div class="form-group">
                                <label for="Transmission">Vites Türü</label>
                                <select class="form-control" id="Transmission" asp-for="Transmission">
                                    <option value="">Vites Türü Seçiniz</option>
                                    <option value="Manuel">Manuel</option>
                                    <option value="Otomatik">Otomatik</option>
                                    <option value="Yarı Otomatik">Yarı Otomatik</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Seat">Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="Seat" asp-for="Seat">
                            </div>
                            <div class="form-group">
                                <label for="Luggage">Bagaj Hacmi</label>
                                <input type="number" class="form-control" id="Luggage" asp-for="Luggage">
                            </div>
                            <div class="form-group">
                                <label for="FuelType">Yakıt Türü</label>
                                <select class="form-control" id="FuelType" asp-for="FuelType">
                                    <option value="">Yakıt Türü Seçiniz</option>
                                    <option value="Benzin">Benzin</option>
                                    <option value="Dizel">Dizel</option>
                                    <option value="Elektrik">Elektrik</option>
                                    <option value="Hibrit">Hibrit</option>
                                    <option value="LPG">LPG</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="BigImageUrl">Büyük Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="BigImageUrl" asp-for="BigImageUrl">
                            </div>
                            <a href="/AdminCar/Index/" class="btn btn-danger">Geri Dön</a>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Güncelle</button>
                        </form>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end page title -->

        </div> <!-- container-fluid -->
    </div>
</div>

