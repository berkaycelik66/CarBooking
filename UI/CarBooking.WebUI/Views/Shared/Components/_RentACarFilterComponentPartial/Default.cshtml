@model ResultLocationDto

<style>
    .request-form .form-control {
        background: rgb(16, 137, 255) !important;
        color: #fff !important;
        font-size: 14px;
    }
</style>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form asp-action="Index" asp-controller="RentACarList" method="post" class="request-form ftco-animate bg-primary">
                            <h2>Seyahatini Planla</h2>
                            <div class="form-group">
                                <label for="LocationID" class="label">Araç Alınacak Lokasyon</label>
                                @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.LocationValues, new { @class = "form-control" })
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Alış Tarihi</label>
                                    <input type="date" class="form-control" name="PickUpDate" id="PickUpDate">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="PickUpTime" id="pick_up_time_pick" placeholder="Alış Saati">
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Teslim Tarihi</label>
                                    <input type="date" class="form-control" name="DropOffDate" id="DropOffDate">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Teslim Saati</label>
                                    <input type="text" class="form-control" name="DropOffTime" id="drop_off_time_pick" placeholder="Teslim Saati">
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Araç Kiralamanın En Kolay ve Hızlı Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Alış Noktanızı Seçin</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">En Uygun Araçları Görün</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Araç İçin Rezervasyon Oluşturun</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="/CarPricing/Index/" class="btn btn-primary py-3 px-4">Araç Fiyat Listesini Gör</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>