@model List<ResultFooterAddressDto>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@foreach (var item in Model)
{
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>Booking</span></a></h2>
                        <p>@item.Description</p>
                        @await Component.InvokeAsync("_FooterUILayoutSocialMediaComponentPartial")
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Hızlı Erişim</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About/Index/" class="py-2 d-block">Hakkımızda</a></li>
                            <li><a href="/Service/Index/" class="py-2 d-block">Hizmetler</a></li>
                            <li><a id="TermsOfService" href="javascript:void(0)" class="py-2 d-block">Şartlar & Koşullar</a></li>
                            <li><a id="Security" href="javascript:void(0)" class="py-2 d-block">Güvenlik</a></li>
                            <li><a id="CookiesPolicy" href="javascript:void(0)" class="py-2 d-block">Çerez Politikası</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Müşteri Hizmetleri</h2>
                        <ul class="list-unstyled">
                            <li><a id="FAQ" href="javascript:void(0)" class="py-2 d-block">SSS</a></li>
                            <li><a id="PaymentOption" href="javascript:void(0)" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                            <li><a href="/CarPricing/Index/" class="py-2 d-block">Kiralama</a></li>
                            <li><a id="HowItWorks" href="javascript:void(0)" class="py-2 d-block">Nasıl Çalışır?</a></li>
                            <li><a href="/Contact/Index/" class="py-2 d-block">Bize Ulaşın</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Bir Sorun Mu Var?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><a href="tel://@(item.Phone)"><span class="icon icon-phone"></span><span class="text">@item.Phone</span></a></li>
                                <li><a href="mailto:@(item.Mail)"><span class="icon icon-envelope"></span><span class="text">@item.Mail</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">

                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> | Tüm Hakları Saklıdır
                    </p>
                </div>
            </div>
        </div>
    </footer>
}
<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

<script>
    $('#TermsOfService').click(function () {
        swal("Şartlar & Koşullar", "Araç kiralamadan önce, geçerli bir sürücü belgesine sahip olmanız ve 21 yaşını doldurmuş olmanız gerekmektedir. Kiralama süresi ve fiyat, araç tipi ve rezervasyon tarihine göre değişiklik gösterebilir. Kiralama işlemi, sözleşme koşullarına uygun olarak yapılmalıdır. Sigorta, araç durumu ve iade şartları hakkında daha fazla bilgi için hizmet sözleşmenizi inceleyebilirsiniz.");
    });

    $('#Security').click(function () {
        swal("Güvenlik", "Müşteri bilgileri ve ödeme verileri, en yüksek güvenlik standartlarına göre şifrelenerek korunmaktadır. Kişisel verileriniz, yalnızca hizmet sağlamak amacıyla kullanılacak ve üçüncü şahıslarla paylaşılmayacaktır. Herhangi bir güvenlik ihlali durumunda, derhal bilgilendirilecek ve gerekli önlemler alınacaktır.");
    });

    $('#CookiesPolicy').click(function () {
        swal("Çerez Politikası", "Web sitemiz, kullanıcı deneyimini iyileştirmek amacıyla çerezler kullanmaktadır. Çerezler, siteyi daha verimli hale getirmek ve tercihlerinizi hatırlamak için kullanılır. Çerez kullanımını kabul etmediğiniz takdirde, tarayıcı ayarlarınızdan çerezleri devre dışı bırakabilirsiniz.");
    });

    $('#FAQ').click(function () {
            swal("Sık Sorulan Sorular", `Araç kiralamak için yaş sınırı nedir?"
    Araç kiralamak için en az 21 yaşında olmanız gerekmektedir. Bazı araçlar için yaş sınırı 25 olabilir.

    Ödeme yöntemleri nelerdir?
    Kredi kartı, banka kartı ve çevrimiçi ödeme yöntemleri ile ödeme yapabilirsiniz.

    Araç teslimatında ek ücret alınır mı?
    Teslimat saati ve süresine bağlı olarak ek ücretler uygulanabilir. Detaylı bilgi için rezervasyon esnasında ücret hesaplaması yapılacaktır.

    Araçları nereye teslim edebilirim?
    Araç, kiralama sözleşmesinde belirtilen lokasyona teslim edilmelidir.

    Araçta hasar meydana gelirse ne yapmalıyım?
    Araç teslim aldıktan sonra herhangi bir hasar fark ederseniz, hemen bizimle iletişime geçiniz. Kiralama süresi boyunca meydana gelen hasar, kiracıya ait olacaktır.`);
    });

    $('#PaymentOption').click(function () {
        swal("Ödeme Yöntemleri", "Ödeme işleminizi güvenle tamamlayabilmeniz için çeşitli seçenekler sunuyoruz. Kredi kartı (Visa, MasterCard vb.), banka kartı ve çevrimiçi ödeme yöntemleri (PayPal, Stripe gibi) ile ödeme yapabilirsiniz. Ayrıca, bazı lokasyonlarda kapıda nakit ödeme imkanı da sunulmaktadır. Tüm ödemeler, güvenli ödeme altyapıları ile şifrelenerek işlenir ve ödemeniz tamamlandığında rezervasyonunuz onaylanır.");
    });

    $('#HowItWorks').click(function () {
        swal("Nasıl Çalışır", "Araç kiralama işlemi oldukça basittir. İlk olarak, web sitemiz üzerinden kiralamak istediğiniz aracı ve tarih aralığını seçin. Rezervasyonunuzu tamamladıktan sonra, ödemenizi güvenli bir şekilde yaparak kiralamanızı onaylayın. Kiralama günü geldiğinde, belirtilen lokasyona giderek aracınızı teslim alın. Araç, belirtilen süre boyunca size teslim edilir ve kiralama süresi sonunda belirtilen lokasyona geri iade edilir. Sizin için hızlı, güvenli ve sorunsuz bir kiralama deneyimi sunmak önceliğimizdir..");
    });
</script>
