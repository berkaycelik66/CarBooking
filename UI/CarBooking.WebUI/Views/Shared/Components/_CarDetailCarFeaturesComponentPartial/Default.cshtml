@model List<ResultCarFeatureByCarIdDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="col-md-12">
                <div class="alert alert-info text-center" role="alert">
                    Bu araçla ilgili özellikler henüz girilmemiştir!
                </div>
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <ul class="features">
                    <li class="@(item.IsPresent ? "check" : "remove")"><span class="@(item.IsPresent ? "ion-ios-checkmark" : "ion-ios-close")"></span>@item.FeatureName</li>
                </ul>
            </div>
        }
    </div>
</div>