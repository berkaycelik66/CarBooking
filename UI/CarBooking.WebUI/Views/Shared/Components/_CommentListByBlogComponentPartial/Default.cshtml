@model List<ResultCommentByBlogIdDto>

<h3 class="mb-5">@Model.Count Yorum</h3>
<ul class="comment-list">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard bio">
                    <img src="https://www.booksie.com/files/profiles/22/mr-anonymous_230x230.png" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.Name</h3>
                    <div class="meta">@item.CreatedDate.ToString("dd MMM yyyy HH:mm")</div>
                    <p>@item.Content</p>
                </div>
            </li>
        }
    }
    else
    {
        <li>
            <div class="alert alert-info" role="alert">
                Henüz yorum bulunmamaktadır, ilk yorumu yapan siz olun!
            </div>
        </li>
    }
</ul>