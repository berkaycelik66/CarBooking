@model List<ResultAllBlogsWithAuthorsDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Bloglar</h4>


            <div class="table-responsive">
                <table class="table table-hover table-centered table-nowrap mb-0">
                    <thead>
                        <tr>
                            <th class="border-top-0">Başlık</th>
                            <th class="border-top-0">Yazar</th>
                            <th class="border-top-0">Blogu Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.Title
                                    </h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.AuthorName</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        <a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-outline-secondary">Görüntüle</a>
                                    </h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->